@page
@model SatStackerWeb.Pages.Transaction.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].ValuePerUnitinEuros)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].Create)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].Update)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntityTransaction[0].Delete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EntityTransaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValuePerUnitinEuros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Create)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Update)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delete)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EntityTransactionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EntityTransactionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EntityTransactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
